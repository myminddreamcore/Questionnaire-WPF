<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="анкета" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="#FFAE25B4">
        <ComboBox x:Name="cb" HorizontalAlignment="Left" Margin="611,10,0,0" VerticalAlignment="Top" Width="157" SelectionChanged="cb_SelectionChanged"/>
        <Button x:Name="start" Content="старт" HorizontalAlignment="Left" Margin="344,17,0,0" VerticalAlignment="Top" Width="75" Click="start_Click"/>
        <TextBlock x:Name="v" HorizontalAlignment="Left" Margin="107,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="20" Width="457" Height="110"/>
        <TextBox x:Name="vvod" HorizontalAlignment="Left" Height="41" Margin="131,226,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="253"  PreviewTextInput="vvod_PreviewTextInput" PreviewKeyDown="vvod_PreviewKeyDown"/>
        <Button x:Name="next" Content="следующий" HorizontalAlignment="Left" Margin="324,327,0,0" VerticalAlignment="Top" Width="75" Click="next_Click" />
        <DatePicker x:Name="dp" HorizontalAlignment="Left" Margin="131,201,0,0" VerticalAlignment="Top" PreviewTextInput="dp_PreviewTextInput" PreviewKeyDown="dp_PreviewKeyDown" />
        <RadioButton x:Name="r0" Content="" HorizontalAlignment="Left" Margin="107,201,0,0" VerticalAlignment="Top" Foreground="White"/>
        <RadioButton x:Name="r1" Content="" HorizontalAlignment="Left" Margin="107,226,0,0" VerticalAlignment="Top" Foreground="White" />
        <RadioButton x:Name="r2" Content="" HorizontalAlignment="Left" Margin="107,252,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.556,2.467" Foreground="White"/>
        <RadioButton x:Name="r3" Content="" HorizontalAlignment="Left" Margin="107,272,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Slider x:Name="s1" Minimum="0" Maximum="100"  HorizontalAlignment="Left" Margin="212,288,0,0" VerticalAlignment="Top" Width="187" ValueChanged="s1_ValueChanged"/>
        <TextBlock x:Name="s1text" HorizontalAlignment="Left" Margin="300,272,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <TextBox x:Name="lb" HorizontalAlignment="Left" Height="169" Margin="611,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="157"/>
    </Grid>
</Window>
